{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pipe",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include":"#comments"
		},
		{
			"include":"#functions"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#strings_single"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pipe",
				"match": "\\b(def|if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.pipe",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pipe",
					"match": "\\\\."
				}
			]
		},
		"strings_single":{
			"name":"string.quoted.single",
			"begin": "\\'",
			"end":"\\'",
			"patterns": [
				{
				"name": "constant.character.escape.pipe",
				"match": "\\\\."
				}
			]
		},
		"comments":{
			"patterns": [
				{
					"name":"comment.line.pipe",
					"match": "#.*\n"
				}
			]
		},
		"functions":{
			"patterns":[
				{
					"name": "entity.name.function.pipe",
					"match":"^\\S*\\b"
				}
			]
		}
	},
	"scopeName": "source.pipe"
}